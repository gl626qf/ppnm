set terminal svg
set output "taskB.svg"
set terminal svg background "white"
set multiplot layout 2,2 rowsfirst

set title "rmax convergence"
set ylabel "E0"
set xlabel "rmax (bohr radii)"
set key top right
plot [0:10.2][-1:2.6] "rmax.data" index 0 using 1:5 with points pt 6 pointsize 0.6 title "Estimation"\
        , -0.5 with lines linetype 2 title "Exact"



set title "rmin convergence"
set ylabel "E0"
set xlabel "rmin (bohr radii)"
set key top right
plot [0:0.2][-1:1] "rmin.data" index 0 using 2:5 with points pt 6 pointsize 0.6 title "Estimation"\
        , -0.5 with lines linetype 2 title "exact"


        
set title "Acc convergens"
set ylabel "E_0"
set xlabel "acc"
set logscale x
set xtics (1e-8, 1e-4, 1e-1)
set key top right
plot [1e-8:1e-1][-0.4998:-0.502] "acc.data" index 2 using 3:5 with points pt 6 ps 0.6 title "Estmiation"\
        , -0.5 with lines linetype 2 title "exact"



set title "Eps convergens"
set ylabel "E_0"
set xlabel "eps"
set key top right
set xtics (1e-8, 1e-4, 1e-1)
set logscale x
plot [1e-8:1e-1][-0.4998:-0.501] "eps.data" index 3 using 4:5 with points pt 6 ps 0.6 title "Estmiation "\
        , -0.5 with lines linetype 2 title "exact"
